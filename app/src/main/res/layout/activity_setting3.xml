<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_back" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="@color/bg_screen"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">
            <!--添加具体的布局-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:text="@string/third_step"
                android:textSize="@dimen/x16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x14"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/bg_radius">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x200"
                    android:src="@mipmap/sc0301"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/x10"
                    android:text="导轨采集器连接一台红外抄表装置抄读单台电表走线距离不超过2m，无需进行延长接线"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/x14"
                android:layout_marginTop="@dimen/x16"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/bg_radius">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x200"
                    android:src="@mipmap/sc0302"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/x10"
                    android:text="走线距离超过2m，需进行延长接线"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/x30"
        android:background="@drawable/btn_blue"
        android:text="@string/next_sure3"
        android:textColor="@color/white" />
</RelativeLayout>