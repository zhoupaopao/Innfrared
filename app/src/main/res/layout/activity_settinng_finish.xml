<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <include layout="@layout/layout_title_back" android:id="@+id/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:background="@color/white"
        android:layout_marginTop="@dimen/x18">
        <include layout="@layout/layout_setting_finish_top" android:id="@+id/ll1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x25"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue1"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:text="重新扫描"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/x40"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:background="@drawable/btn_white"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:text="联系维护"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ll1"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/linearLayout">
            <ImageView
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/x200"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/none_data" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/none_data"/>
            <TextView
                android:layout_marginTop="@dimen/x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/none_data_msg"/>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>